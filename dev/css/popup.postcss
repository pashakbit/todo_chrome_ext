/* --------------------- variables --------------------- */
:root {
	--popupWidth: 400px;
	--popupHeight: 600px;

	--subElHeight: calc(var(--popupHeight) / 15);

	--mainFont: 300 normal calc(var(--subElHeight) / 2)/var(--subElHeight) Arial Narrow;
	--mainBg: #3f51b5;
	--mainColor: #fff;
	--mainPadding: .8rem;
	--mainBR: 2px;
	--mainBC: #303f9f;

	--headFont: 300 normal calc(var(--subElHeight) / 2.3)/var(--subElHeight) Arial Narrow;
	--contentFont: 300 normal calc(var(--subElHeight) / 3)/calc(var(--subElHeight) / 1.5) Arial Narrow;
	--contentBg: #e2e1e0;
	--contentColor: #444;
	--contentBC: #e2e1e0;

	--itemBg: #fafbfc;
	--subContentColor: #757575;
}
/* ===================================================== */


/* -------------------- basic style -------------------- */
html {
	box-sizing: border-box;
}
*, *:before, *:after {
	box-sizing: inherit;
}
html, body {
	padding: 0;
	margin: 0;
}
.app {
	position: relative;
	overflow: hidden;

	width: var(--popupWidth);
	height: var(--popupHeight);

	font: var(--mainFont);
	background: var(--contentBg);
	color: var(--mainColor);
}
.icon {
	display: inline-block;

	width: 100%;
	height: 100%;

	cursor: pointer;
}
/* ===================================================== */


/* -------------------- header block ------------------- */
.header {
	width: 100%;
	height: var(--subElHeight);

	background: var(--mainBg);

	box-shadow: 0 3px 4px rgba(0, 0, 0, 0.12), 0 3px 4px rgba(0, 0, 0, 0.24);

	text-align: center;

	& .brand {
		display: inline-block;
		overflow: hidden;

		width: var(--subElHeight);
		height: var(--subElHeight);

		vertical-align: top;
	}

	& .curtask {
		display: inline-block;
		overflow: hidden;

		width: calc(var(--popupWidth) - (var(--subElHeight) * 2));
		height: var(--subElHeight);

		text-overflow: ellipsis;
		white-space: nowrap;
		vertical-align: top;

		margin-left: -.3rem;
		margin-right: -.3rem;
		padding-left: .4rem;
		padding-right: .4rem;
	}

	& .search {
		position: relative;
		display: inline-block;

		width: var(--subElHeight);
		height: var(--subElHeight);

		vertical-align: top;

		&__text {
			position: absolute;
			display: none;

			width: calc(var(--popupWidth) - (var(--subElHeight) * 2) - 2rem);
			height: calc(var(--subElHeight) * 0.8);
			line-height: calc(var(--subElHeight) * 0.8);

			left: calc(-var(--popupWidth) + (var(--subElHeight) * 2) + 1rem);
			top: calc(var(--subElHeight) * 0.1);

			padding: calc(var(--subElHeight) * 0.1) calc(var(--subElHeight) * 0.3);

			background: var(--mainBg);
			color: var(--mainColor);
			border-width: 0px 0px 1px 0px;
			border-color: var(--mainBC);
			text-align: left;

			outline: none;
		}
	}
}
/* ===================================================== */


/* --------------------- main block -------------------- */
.main {
	overflow-x: hidden;
	overflow-y: auto;

	width: 100%;
	height: calc(var(--popupHeight) - (var(--subElHeight) * 2) - .8rem);

	margin-top: .8rem;
	padding: 0 var(--mainPadding);

	font: var(--contentFont);
	color: var(--contentColor);
}
.list {
	width: 100%;

	margin: 0;
	padding: 0;

	& .item {
		position: relative;
		display: block;
		overflow: hidden;

		width: 100%;
		height: calc(var(--subElHeight) * 3);

		margin: 0 0 var(--mainPadding) 0;
		padding: 0;

		background: var(--itemBg);
		list-style: none;

		box-shadow: 0 1px 2px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24);

		transition: box-shadow .1s linear;

		&:hover {
			box-shadow: 0 3px 5px rgba(0, 0, 0, 0.12), 0 3px 5px rgba(0, 0, 0, 0.24);
		}

		&__completed {
			display: inline-block;

			width: var(--subElHeight);
			height: var(--subElHeight);
		}
		&__head {
			display: inline-block;
			overflow: hidden;

			width: calc(100% - var(--subElHeight));
			height: var(--subElHeight);

			padding-left: var(--mainPadding);
			padding-right: var(--mainPadding);

			text-overflow: ellipsis;
			white-space: nowrap;

			color: var(--contentColor);
			border-bottom: 1px solid var(--contentBC);

			font: var(--headFont);
			text-decoration: none;
		}
		/* &__id {
			position: absolute;
			display: inline-block;

			top: calc(var(--subElHeight) + (var(--mainPadding) / 4));
			right: var(--mainPadding);

			color: var(--subContentColor);

			font: var(--contentFont);
		} */
		&__content {
			display: block;

			width: 100%;

			padding: 0 var(--mainPadding);
		}
	}
}
/* ===================================================== */


/* -------------------- footer block ------------------- */
.footer {
	width: 100%;
	height: var(--subElHeight);

	background: var(--mainBg);

	box-shadow: 0 -3px 4px rgba(0, 0, 0, 0.12), 0 -3px 4px rgba(0, 0, 0, 0.24);

	text-align: center;

	& .sync {
		position: relative;
		display: inline-block;

		width: var(--subElHeight);
		height: var(--subElHeight);

		vertical-align: top;
	}

	& .info {
		display: inline-block;
		overflow: hidden;

		width: calc(var(--popupWidth) - (var(--subElHeight) * 2));
		height: var(--subElHeight);

		text-overflow: ellipsis;
		white-space: nowrap;
		vertical-align: top;

		margin-left: -.3rem;
		margin-right: -.3rem;
		padding-left: .4rem;
		padding-right: .4rem;
	}

	& .showset {
		position: relative;
		display: inline-block;

		width: var(--subElHeight);
		height: var(--subElHeight);

		vertical-align: top;
	}
}
/* ===================================================== */


/* ------------------- settings block ------------------ */
.settings {
	position: absolute;
	display: none;

	width: calc(var(--popupWidth) - var(--subElHeight));
	height: var(--popupHeight);

	left: var(--popupWidth);
}
/* ===================================================== */