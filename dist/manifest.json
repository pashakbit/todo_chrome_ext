{
	"manifest_version": 2,
	"name": "__MSG_extName__",
	"description": "__MSG_extDesc__",
	"version": "0.1.0",
	"default_locale": "en",
	"minimum_chrome_version": "28",
	"icons": {
		"128": "img/ext_icons/default.png"
	},
	"browser_action": {
		"default_icon": {
			"default": "img/ext_icons/default.png",
		},
		"default_title": "__MSG_extName__",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["js/lib/jquery.min.js", "js/storage.js", "js/background.js"],
		"persistent": false
	},
	"options_page": "options.html",
	"incognito": "split",
	"offline_enabled": true,
	"permissions": [
		"alarms",
		"background",
		"notifications",
		"storage",
		"unlimitedStorage"
	]
}